<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="300dp"
    android:layout_marginLeft="@dimen/margin_left_right_row_item_main"
    android:layout_marginRight="@dimen/margin_left_right_row_item_main"
    android:layout_marginBottom="@dimen/margin_bottom_top_row_item_main"
    android:layout_marginTop="@dimen/margin_bottom_top_row_item_main">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="@string/image_main"
        android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:gravity="start|center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            android:shadowColor="@color/secondary_text"
            android:shadowDx="12"
            android:shadowDy="12"
            android:shadowRadius="5"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:background="@drawable/border"
            android:fontFamily="sans-serif"
            android:text="@string/nutella_pie"
            android:textColor="@color/primary_light"
            android:textSize="38sp"
            android:textStyle="bold"
            android:paddingStart="40dp"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>