<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="4dp"
    android:background="@drawable/border_empty"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/main_selector"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/elevation"
        card_view:cardCornerRadius="@dimen/corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout_item_detail"
            android:background="@color/colorPrimary_translucid_plus"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_detail_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/model_margin_8dp"
                android:text="@string/step"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tv_item_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/model_margin_8dp"
                android:layout_marginRight="@dimen/model_margin_8dp"
                android:padding="@dimen/model_margin_8dp"
                android:text="@string/nutella_pie"
                android:textColor="@color/secondary_text" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>
