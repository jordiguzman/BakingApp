<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/model_margin_8dp"
    android:layout_marginEnd="@dimen/model_margin_8dp"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/model_margin_8dp">


    <TextView
        android:id="@+id/recipe"
        android:text="@string/nutella_pie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/model_text_size_16"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/model_text_size_16"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/model_margin_8dp"
        android:layout_marginBottom="@dimen/elevation"
        android:textSize="@dimen/model_text_size_14"
        android:textColor="@color/primary_text"/>
</LinearLayout>