<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="appkite.jordiguzman.com.backingapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

        </activity>
        <activity
            android:name=".ui.Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.DetailStepsActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.DetailRecipeActivity"
            android:parentActivityName=".ui.DetailStepsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.IngredientsActivity"
            android:parentActivityName=".ui.DetailStepsActivity"
            android:theme="@style/AppTheme" />

        <receiver android:name=".widgets.BackingWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="appkite.jordiguzman.com.backingapp.ACTION_DATA_UPDATED"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/backing_widget_provider_info" />

        </receiver>


        <service android:name=".widgets.WidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:enabled="true"
            android:exported="false"/>
         <provider
             android:authorities="appkite.jordiguzman.com.backingapp"
             android:name=".data.IngredientsContentProvider"
             android:exported="false"/>
    </application>

</manifest>